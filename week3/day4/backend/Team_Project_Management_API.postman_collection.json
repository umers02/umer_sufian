                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/projects",
              "host": ["{{baseUrl}}"],
              "path": ["projects"]
            }
          }
        },
        {
          "name": "Update Project",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"E-commerce Platform v2\",\n  \"status\": \"completed\",\n  \"techStack\": [\"React\", \"Node.js\", \"MongoDB\", \"Express\", \"Redis\"]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/projects/:id",
              "host": ["{{baseUrl}}"],
              "path": ["projects", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "PROJECT_ID_HERE"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Project",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/projects/:id",
              "host": ["{{baseUrl}}"],
              "path": ["projects", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "PROJECT_ID_HERE"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
