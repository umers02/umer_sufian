              "raw": "{\n  \"title\": \"E-commerce Platform\",\n  \"description\": \"Building a modern e-commerce platform with React and Node.js\",\n  \"techStack\": [\"React\", \"Node.js\", \"MongoDB\", \"Express\"],\n  \"status\": \"active\",\n  \"teamMembers\": [],\n  \"startDate\": \"2024-01-15\",\n  \"endDate\": \"2024-06-30\"\n}",
              "options": {
